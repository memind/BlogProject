@model AuthorDetailsVM
@{
    ViewData["Title"] = "Author Details";
}

<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@Model.FirstName @Model.LastName</h3>
        </div>
        <div class="card-body">
            First Name: @Model.FirstName
            <br />
            Last Name: @Model.LastName
            <br />
            Joining Date: @Model.CreateDate
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-sm btn-primary">Back to List</a>
        </div>
    </div>
</div>