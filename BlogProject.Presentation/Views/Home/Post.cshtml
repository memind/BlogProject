@model PostDetailsVM
@{
    ViewData["Title"] = "Post Details";
}

<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">@Model.Title by @Model.FullName</h3>
        </div>
        <div class="card-body">
            @Model.Content
        </div>
        
        <div class="card-footer">
            <div class="post clearfix">
                <div class="user-block">
                    <img class="img-circle img-bordered-sm" src="~/media/img/user3-128x128.jpg" alt="User Image">
                    <span class="username">
                        <a href="#">Sarah Ross</a>
                        <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                    </span>
                    <span class="description">Sent you a message - 3 days ago</span>
                </div>
                <p>
                    Lorem ipsum represents a long-held tradition for designers,
                    typographers and the like. Some people hate it and argue for
                    its demise, but others ignore the hate as they create awesome
                    tools to help create filler text for everyone from bacon lovers
                    to Charlie Sheen fans.
                </p>

                <div class="user-block">
                    <img class="img-circle img-bordered-sm" src="~/media/img/user6-128x128.jpg" alt="User Image">
                    <span class="username">
                        <a href="#">q1llerJames</a>
                        <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                    </span>
                    <span class="description">Sent you a message - 3 days ago</span>
                </div>
                <p>
                    Yo Sarah! Wanna hangout???
                </p>

                <form class="form-horizontal" asp-action="SendComment">
                    <div class="input-group input-group-sm mb-0">
                        <input class="form-control form-control-sm" placeholder="Response">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-danger">Send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
            <a asp-action="Index" class="btn btn-sm btn-primary">Back to List</a>
    </div>
</div>